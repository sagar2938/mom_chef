<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="2dp"
        android:orientation="vertical">

    <ScrollView android:layout_width="match_parent"
                android:layout_height="match_parent">

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:orientation="vertical">

            <androidx.cardview.widget.CardView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    app:cardCornerRadius="1dp"
                    app:cardElevation="4dp">

                <RelativeLayout android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                    <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/circular_iv"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_below="@+id/newlead"
                            android:src="@drawable/mom1"/>

                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:layout_toRightOf="@+id/circular_iv"
                              android:text="Shailesh Diwakar"
                              android:fontFamily="serif"
                              android:textColor="@color/dark_grey"
                              android:id="@+id/cutomer_name"
                              android:textSize="@dimen/small_txt"
                              android:layout_marginTop="10dp"
                              android:layout_marginLeft="20dp"/>


                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:layout_toRightOf="@+id/circular_iv"
                              android:layout_below="@+id/cutomer_name"
                              android:text="117/3A Noida sector 16 201301"
                              android:id="@+id/address_tv"
                              android:fontFamily="serif"
                              android:textSize="@dimen/small_txt"
                              android:layout_marginTop="3dp"
                              android:layout_marginLeft="20dp"
                              android:layout_marginBottom="5dp"
                    />

                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:layout_toRightOf="@+id/circular_iv"
                              android:layout_below="@+id/address_tv"
                              android:text="Air Conditioners"
                              android:id="@+id/category_tv"
                              android:fontFamily="serif"
                              android:textSize="@dimen/small_txt"
                              android:layout_marginTop="3dp"
                              android:layout_marginLeft="20dp"
                              android:layout_marginBottom="5dp"
                    />

                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:layout_toRightOf="@+id/circular_iv"
                              android:layout_below="@+id/category_tv"
                              android:text="No Collong"
                              android:id="@+id/problem_tv"
                              android:fontFamily="serif"
                              android:textSize="@dimen/small_txt"
                              android:layout_marginTop="3dp"
                              android:layout_marginLeft="20dp"
                              android:layout_marginBottom="5dp"
                    />


                    <LinearLayout
                            android:id="@+id/separate_ll"
                            android:layout_width="match_parent"
                            android:layout_below="@+id/problem_tv"
                            android:background="@color/bg_separator"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal"
                            android:layout_height="1dp">

                    </LinearLayout>

                    <LinearLayout android:layout_width="match_parent"
                                  android:layout_height="wrap_content"
                                  android:padding="2dp"
                                  android:id="@+id/order_ll"
                                  android:layout_below="@+id/separate_ll">

                        <TextView android:layout_width="100dp"
                                  android:layout_height="wrap_content"
                                  android:layout_weight=".5"
                                  android:text="30/12/2018  4 PM"
                                  android:textAlignment="center"
                                  android:id="@+id/date_tv"
                                  android:fontFamily="serif"
                                  android:textSize="@dimen/small_txt"
                                  android:layout_marginTop="3dp"
                                  android:layout_marginBottom="10dp"/>

                        <View android:layout_width="1dp"
                              android:background="@color/bg_separator"
                              android:layout_height="match_parent"/>

                        <TextView android:layout_width="100dp"
                                  android:layout_height="wrap_content"
                                  android:layout_weight=".5"
                                  android:text="CRNB0005131"
                                  android:textAlignment="center"
                                  android:id="@+id/orderid_tv"
                                  android:fontFamily="serif"
                                  android:textSize="@dimen/small_txt"
                                  android:padding="5dp"
                                  android:layout_marginTop="3dp"
                                  android:layout_marginBottom="10dp"/>

                    </LinearLayout>

                    <LinearLayout
                            android:id="@+id/separate_ll2"
                            android:layout_width="match_parent"
                            android:layout_below="@+id/order_ll"
                            android:background="@color/bg_separator"
                            android:orientation="horizontal"
                            android:layout_height="1dp">

                    </LinearLayout>

                    <LinearLayout android:layout_width="match_parent"
                                  android:layout_height="40dp"
                                  android:padding="2dp"
                                  android:background="@drawable/roundcorner_button"
                                  android:id="@+id/order_ll1"
                                  android:layout_below="@+id/separate_ll2">

                        <TextView android:layout_width="100dp"
                                  android:layout_height="wrap_content"
                                  android:layout_weight=".5"
                                  android:text="Completed"
                                  android:textColor="@color/white"
                                  android:layout_gravity="center_vertical"
                                  android:textAlignment="center"
                                  android:id="@+id/complete_tv"
                                  android:fontFamily="serif"
                                  android:textSize="@dimen/text_size_medium"
                                  android:layout_marginLeft="20dp"/>

                        <View android:layout_width="1dp"
                              android:background="@color/white"
                              android:layout_height="match_parent"/>

                        <TextView android:layout_width="100dp"
                                  android:layout_height="wrap_content"
                                  android:layout_weight=".5"
                                  android:text="Pending"
                                  android:textColor="@color/white"
                                  android:textAlignment="center"
                                  android:layout_gravity="center_vertical"
                                  android:id="@+id/pending_tv"
                                  android:fontFamily="serif"
                                  android:textSize="@dimen/text_size_medium"
                                  android:layout_marginLeft="20dp"/>
                    </LinearLayout>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>


            <LinearLayout
                    android:id="@+id/pending_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:layout_marginTop="5dp"
                    android:padding="2dp">

                <RelativeLayout android:layout_width="match_parent"
                                android:layout_height="wrap_content"

                                android:layout_marginTop="10dp"
                                android:padding="2dp">

                    <TextView
                            android:id="@+id/jobdone_tv1"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="Job done"
                            android:layout_centerVertical="true"
                            android:textAlignment="center"
                            android:fontFamily="serif"
                            android:textSize="15dp"
                            android:layout_marginLeft="0dp"/>

                    <LinearLayout
                            android:layout_width="170dp"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/jobdone_tv1"
                            android:layout_alignParentRight="true"
                            android:layout_margin="10dp"
                            android:orientation="vertical"
                            android:layout_marginLeft="18dp"
                            android:layout_marginRight="18dp">
                        <Spinner
                                android:id="@+id/grade_rage_sp1"
                                android:layout_width="fill_parent"
                                android:background="@drawable/dotted_boundry"
                                android:layout_centerHorizontal="true"
                                android:spinnerMode="dialog"
                                android:layout_height="40dp" />

                    </LinearLayout>


                </RelativeLayout>


                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="Remarks"
                          android:textAlignment="center"
                          android:fontFamily="serif"
                          android:textSize="15dp"
                          android:layout_marginTop="3dp"
                          android:layout_marginLeft="15dp"/>


                <EditText
                        android:id="@+id/pending_et"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_margin="10dp"
                        android:layout_weight=".5"
                        android:hint="Enter Remarks"
                        android:textSize="@dimen/text_size_small"
                        android:background="@drawable/cell_border_edittext"
                        android:textAlignment="center"
                        android:fontFamily="serif"/>

                <LinearLayout
                        android:id="@+id/finished_pending_ll"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="visible"
                        android:orientation="vertical"
                        android:layout_margin="10dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/roundcorner_button"
                        android:padding="10dp">

                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:text="Save"
                              android:layout_gravity="center_horizontal"
                              android:textAlignment="center"
                              android:fontFamily="serif"
                              android:textSize="15dp"
                              android:textColor="@color/white"
                              android:layout_marginTop="3dp"
                              android:layout_marginLeft="15dp"/>

                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                    android:id="@+id/complete_ui_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:background="@color/white"
                    android:orientation="vertical">

                <RelativeLayout android:layout_width="match_parent"
                                android:layout_height="wrap_content"

                                android:layout_marginTop="10dp"
                                android:padding="2dp">

                    <TextView
                            android:id="@+id/jobdone_tv"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="Job done"
                            android:layout_centerVertical="true"
                            android:textAlignment="center"
                            android:fontFamily="serif"
                            android:textSize="15dp"/>

                    <LinearLayout
                            android:layout_width="170dp"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/jobdone_tv"
                            android:layout_alignParentRight="true"
                            android:orientation="vertical"
                            android:layout_marginLeft="40dp"
                            android:layout_marginRight="40dp">
                        <Spinner
                                android:id="@+id/grade_rage_sp"
                                android:layout_width="fill_parent"
                                android:background="@drawable/dotted_boundry"
                                android:layout_centerHorizontal="true"
                                android:spinnerMode="dialog"
                                android:layout_height="40dp" />

                    </LinearLayout>


                </RelativeLayout>


                <RelativeLayout android:layout_width="match_parent"
                                android:layout_height="wrap_content"

                                android:layout_marginTop="10dp"
                                android:padding="2dp">

                    <TextView
                            android:id="@+id/confirm_tv"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="Confirm OTP"
                            android:layout_centerVertical="true"
                            android:textAlignment="center"
                            android:fontFamily="serif"
                            android:textSize="15dp"
                            android:layout_marginLeft="15dp"/>


                    <EditText
                            android:id="@+id/otp_et"
                            android:layout_width="170dp"
                              android:layout_height="35dp"
                              android:layout_toRightOf="@+id/confirm_tv"
                              android:layout_alignParentRight="true"
                              android:layout_marginLeft="28dp"
                              android:layout_marginRight="40dp"
                              android:hint="OTP"
                              android:textSize="@dimen/text_size_small"
                              android:background="@drawable/dotted_boundry"
                              android:textAlignment="center"
                              android:fontFamily="serif"/>

                </RelativeLayout>

                <RelativeLayout android:layout_width="match_parent"
                                android:layout_height="wrap_content"

                                android:layout_marginTop="10dp"
                                android:padding="2dp">

                    <TextView
                            android:id="@+id/price_tv"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="Amount to be collected"
                            android:layout_centerVertical="true"
                            android:textAlignment="center"
                            android:fontFamily="serif"
                            android:textSize="15dp"
                            android:layout_marginLeft="15dp"/>


                    <EditText
                            android:id="@+id/price_et"
                            android:layout_width="140dp"
                              android:layout_height="40dp"
                              android:layout_toRightOf="@+id/price_tv"
                              android:layout_alignParentRight="true"
                              android:layout_marginLeft="30dp"
                              android:layout_marginRight="40dp"
                              android:hint="Estimate price"
                              android:textSize="@dimen/text_size_small"
                              android:background="@drawable/dotted_boundry"
                              android:textAlignment="center"
                              android:fontFamily="serif"/>

                </RelativeLayout>

                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:orientation="vertical"
                              android:layout_marginTop="15dp"
                              android:padding="2dp">

                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:text="Remarks"
                              android:textAlignment="center"
                              android:fontFamily="serif"
                              android:textSize="15dp"
                              android:layout_marginTop="3dp"
                              android:layout_marginLeft="15dp"/>


                    <EditText

                            android:id="@+id/work_details_et"
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:layout_margin="10dp"
                            android:layout_weight=".5"
                            android:hint="Enter Remarks"
                            android:textSize="@dimen/text_size_small"
                            android:background="@drawable/cell_border_edittext"
                            android:textAlignment="center"
                            android:fontFamily="serif"/>

                </LinearLayout>

                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:orientation="vertical"
                              android:layout_marginTop="5dp"
                              android:padding="2dp">

                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:text="Defective Parts"
                              android:textAlignment="center"
                              android:fontFamily="serif"
                              android:textSize="15dp"
                              android:layout_marginTop="3dp"
                              android:layout_marginLeft="15dp"/>


                    <EditText
                            android:id="@+id/defective_parts_et"
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:layout_margin="10dp"
                            android:layout_weight=".5"
                            android:hint="Enter defective parts"
                            android:textSize="@dimen/text_size_small"
                            android:background="@drawable/cell_border_edittext"
                            android:textAlignment="center"
                            android:fontFamily="serif"/>

                </LinearLayout>

                <LinearLayout
                        android:id="@+id/upload_parts_ll"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/cell_border_edittext"
                        android:padding="10dp">

                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:text="Upload picture of parts"
                              android:layout_gravity="center_horizontal"
                              android:textAlignment="center"
                              android:fontFamily="serif"
                              android:textSize="15dp"
                              android:layout_marginTop="3dp"
                              android:layout_marginLeft="15dp"/>

                </LinearLayout>
                <LinearLayout
                        android:id="@+id/edit_ll3"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:visibility="gone"
                        android:orientation="vertical"
                        android:background="@drawable/dotted_boundry"
                        android:layout_below="@+id/edit_ll1"
                        android:layout_margin="10.0dip"
                >

                    <ImageView android:id="@+id/edit_icon2"
                               android:layout_width="match_parent"
                               android:layout_height="match_parent"
                               android:layout_gravity="center_horizontal"
                               android:layout_margin="10.0dip"/>
                </LinearLayout>

                <LinearLayout
                        android:id="@+id/confirm_ll"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="10dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/roundcorner_button"
                        android:padding="10dp">

                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:text="Save"
                              android:layout_gravity="center_horizontal"
                              android:textAlignment="center"
                              android:fontFamily="serif"
                              android:textSize="15dp"
                              android:textColor="@color/white"
                              android:layout_marginTop="3dp"
                              android:layout_marginLeft="15dp"/>

                </LinearLayout>

                <LinearLayout
                        android:id="@+id/finished_ll"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:orientation="vertical"
                        android:layout_margin="10dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/roundcorner_button"
                        android:padding="10dp">

                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:text="Finish"
                              android:layout_gravity="center_horizontal"
                              android:textAlignment="center"
                              android:fontFamily="serif"
                              android:textSize="15dp"
                              android:textColor="@color/white"
                              android:layout_marginTop="3dp"
                              android:layout_marginLeft="15dp"/>

                </LinearLayout>


            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>