<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <RelativeLayout
            android:id="@+id/nointernet_connection"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:visibility="visible">

        <ImageView
                android:id="@+id/gifimg"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:padding="20dp"
                android:src="@drawable/no_internet"
        />

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/nointernet_tv"
                  android:layout_below="@+id/gifimg"
                  android:layout_centerInParent="true"
                  android:text="No Internet Connectivity found ! "/>

        <Button
                android:id="@+id/try_button"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/nointernet_tv"
                android:background="@drawable/roundcorner_button"
                android:text="Try Again"
                android:layout_marginBottom="20dp"
                android:textColor="@color/white"/>
    </RelativeLayout>


</LinearLayout>