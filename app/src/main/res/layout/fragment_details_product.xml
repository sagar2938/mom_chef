<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="2dp"
        android:orientation="vertical">

    <ScrollView android:layout_width="match_parent"
                android:layout_height="match_parent">

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:orientation="vertical">


            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="Update Product Details &amp; Job done"
                      android:textAlignment="center"
                      android:fontFamily="serif"
                      android:textSize="@dimen/text_size_medium"
                      android:layout_marginTop="3dp"
                      android:layout_margin="10dp"
                      android:layout_marginBottom="10dp"/>

            <LinearLayout
                    android:id="@+id/complete_ui_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    android:background="@color/white"
                    android:orientation="vertical">

                <RelativeLayout android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:background="@drawable/cell_border_edittext"
                                android:layout_margin="10dp"
                                android:padding="2dp">

                    <TextView
                            android:id="@+id/model_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Model No. *"
                            android:layout_marginLeft="15dp"
                            android:layout_centerVertical="true"
                            android:textAlignment="center"
                            android:fontFamily="serif"
                            android:textSize="14dp"/>

                    <TextView
                            android:id="@+id/scanmodel_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text=" Scan  / "
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:paddingLeft="10dp"
                            android:visibility="visible"
                            android:textAlignment="center"
                            android:fontFamily="serif"
                            android:textSize="14dp"/>


                    <EditText
                            android:id="@+id/model_no_et"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_toRightOf="@+id/scanmodel_tv"
                            android:hint="Enter "
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:paddingRight="10dp"
                            android:imeOptions="actionNext"
                            android:singleLine="true"
                            android:background="@null"
                            android:textSize="@dimen/text_size_small"
                            android:fontFamily="serif"/>

                </RelativeLayout>

                <RelativeLayout android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:background="@drawable/cell_border_edittext"
                                android:layout_margin="10dp"
                                android:padding="2dp">

                    <TextView
                            android:id="@+id/serial_number_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Serial No. *"
                            android:layout_marginLeft="15dp"
                            android:layout_centerVertical="true"
                            android:textAlignment="center"
                            android:fontFamily="serif"
                            android:textSize="14dp"/>

                    <TextView
                            android:id="@+id/scanserial_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="Scan  /  "
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:paddingLeft="10dp"
                            android:textAlignment="center"
                            android:fontFamily="serif"
                            android:textSize="14dp"/>

                    <EditText
                            android:id="@+id/serial_number_et"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_toRightOf="@+id/scanserial_tv"
                            android:hint="Enter"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:paddingRight="10dp"
                            android:background="@null"
                            android:textSize="@dimen/text_size_small"
                            android:fontFamily="serif"/>


                </RelativeLayout>


                <RelativeLayout android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/cell_border_edittext"
                                android:layout_margin="10dp"
                                android:padding="2dp">

                    <TextView
                            android:id="@+id/jobdone_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Job done *"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="15dp"
                            android:textAlignment="center"
                            android:fontFamily="serif"
                            android:textSize="14dp"/>

                    <LinearLayout
                            android:layout_width="170dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:orientation="vertical"
                            android:layout_marginRight="40dp">
                        <Spinner
                                android:id="@+id/grade_rage_sp"
                                android:layout_width="fill_parent"
                                android:layout_centerHorizontal="true"
                                android:spinnerMode="dialog"
                                android:layout_height="40dp"/>

                    </LinearLayout>


                </RelativeLayout>

                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:orientation="horizontal"
                              android:background="@color/lightGray">

                    <TextView android:layout_width="0dp"
                              android:layout_height="wrap_content"
                              android:padding="10dp"
                              android:textAlignment="center"
                              android:layout_weight=".5"
                              android:textStyle="bold"
                              android:textColor="@color/black"
                              android:text="Model / Serial Picture "/>

                    <LinearLayout android:layout_width="1dp"
                                  android:layout_height="match_parent"
                                  android:background="@color/black">
                    </LinearLayout>

                    <TextView android:layout_width="0dp"
                              android:layout_height="wrap_content"
                              android:padding="10dp"
                              android:textAlignment="center"
                              android:textStyle="bold"
                              android:textColor="@color/black"
                              android:layout_weight=".5"
                              android:text="Product Model Picture"/>

                </LinearLayout>

                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:orientation="horizontal">

                    <RelativeLayout
                            android:id="@+id/upload_model_ll"
                            android:layout_width="0dp"
                            android:layout_weight=".5"
                            android:layout_height="150dp"
                            android:orientation="vertical"
                            android:layout_margin="2dp"
                            android:background="@drawable/cell_border_edittext"
                            android:padding="10dp">

                        <ImageView android:layout_width="50dp"
                                   android:layout_height="50dp"
                                   android:layout_marginRight="10dp"
                                   android:id="@+id/click_product_iv"
                                   android:src="@drawable/click_icon"/>

                        <ImageView android:layout_width="wrap_content"
                                   android:layout_height="match_parent"
                                   android:id="@+id/preview_product_iv"
                                   android:visibility="gone"
                                   android:layout_toRightOf="@+id/click_product_iv"
                                   android:layout_gravity="center_horizontal"
                        />


                    </RelativeLayout>


                    <RelativeLayout
                            android:id="@+id/upload_model_pic_ll"
                            android:layout_width="0dp"
                            android:layout_weight=".5"
                            android:layout_height="150dp"
                            android:orientation="vertical"
                            android:layout_margin="2dp"
                            android:background="@drawable/cell_border_edittext"
                            android:padding="10dp">

                        <ImageView android:layout_width="50dp"
                                   android:layout_height="50dp"
                                   android:layout_marginRight="10dp"
                                   android:id="@+id/click_model_pic_iv"
                                   android:src="@drawable/click_icon"/>

                        <ImageView android:layout_width="wrap_content"
                                   android:layout_height="match_parent"
                                   android:visibility="gone"
                                   android:id="@+id/preview_model_pic_iv"
                                   android:layout_toRightOf="@+id/click_model_pic_iv"
                                   android:layout_gravity="center_horizontal"
                        />
                    </RelativeLayout>
                </LinearLayout>

                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:padding="10dp"
                          android:textAlignment="center"
                          android:layout_weight=".5"
                          android:textStyle="bold"
                          android:layout_marginLeft="20dp"
                          android:textColor="@color/black"
                          android:text="Invoice Picture "/>


                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:orientation="horizontal">

                    <RelativeLayout
                            android:id="@+id/upload_invoice_ll"
                            android:layout_width="0dp"
                            android:layout_weight=".5"
                            android:layout_height="150dp"
                            android:orientation="vertical"
                            android:layout_margin="2dp"
                            android:background="@drawable/cell_border_edittext"
                            android:padding="10dp">

                        <ImageView android:layout_width="50dp"
                                   android:layout_height="50dp"
                                   android:layout_marginRight="10dp"
                                   android:id="@+id/click_invoice_iv"
                                   android:src="@drawable/click_icon"/>

                        <ImageView android:layout_width="wrap_content"
                                   android:layout_height="match_parent"
                                   android:visibility="gone"
                                   android:id="@+id/preview_invoice_iv"
                                   android:layout_toRightOf="@+id/click_invoice_iv"
                                   android:layout_gravity="center_horizontal"
                        />
                    </RelativeLayout>


                    <RelativeLayout
                            android:id="@+id/upload_model_pic"
                            android:layout_width="0dp"
                            android:layout_weight=".5"
                            android:layout_height="150dp"
                            android:orientation="vertical"
                            android:layout_margin="2dp"
                            android:padding="10dp">


                    </RelativeLayout>
                </LinearLayout>



                <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:visibility="visible"
                        android:orientation="horizontal">

                    <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_weight="1" >

                        <androidx.cardview.widget.CardView
                                android:id="@+id/move_back_bt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:clickable="true"
                                app:cardCornerRadius="4dp"
                                android:layout_gravity="center"
                                android:layout_below="@+id/attendence_rv"
                                app:cardBackgroundColor="@color/colorPrimary"
                                android:layout_marginLeft="15dp"
                                android:layout_marginRight="30dp">
                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="33dp"
                                    android:gravity="center"
                                    android:layout_margin="3dp"
                                    android:layout_gravity="center_horizontal"
                                    android:textSize="20dp"
                                    android:textColor="@color/white"
                                    android:typeface="serif"
                                    android:text="Back"/>
                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                    <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_weight="1">
                        <androidx.cardview.widget.CardView
                                android:id="@+id/move_next_bt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:clickable="true"
                                app:cardCornerRadius="4dp"
                                android:layout_gravity="center"
                                android:layout_below="@+id/attendence_rv"
                                app:cardBackgroundColor="@color/colorPrimary"
                                android:layout_marginLeft="30dp"
                                android:layout_marginRight="15dp">
                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="33dp"
                                    android:gravity="center"
                                    android:layout_margin="3dp"
                                    android:layout_gravity="center_horizontal"
                                    android:textSize="20dp"
                                    android:textColor="@color/white"
                                    android:typeface="serif"
                                    android:text="Next"/>
                        </androidx.cardview.widget.CardView>

                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>