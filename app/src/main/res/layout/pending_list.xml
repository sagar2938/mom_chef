<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/main_rl"
              android:layout_marginBottom="5dp"
              android:orientation="horizontal">

    <androidx.cardview.widget.CardView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="1dp"
            app:cardElevation="4dp">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/circular_iv"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_margin="10dp"
                    android:src="@drawable/mom1"/>

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_toRightOf="@+id/circular_iv"
                      android:layout_below="@+id/newlead"
                      android:text="Shailesh Diwakar"
                      android:textStyle="bold"
                      android:fontFamily="serif"
                      android:textColor="@color/black"
                      android:id="@+id/cutomer_name"
                      android:textSize="@dimen/small_txt"
                      android:layout_marginTop="20dp"
                      android:layout_marginLeft="20dp"/>

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_toRightOf="@+id/circular_iv"
                      android:layout_below="@+id/cutomer_name"
                      android:text="117/3A Noida sector 16 201301"
                      android:id="@+id/address_tv"
                      android:fontFamily="serif"
                      android:textColor="@color/dark_grey"
                      android:textSize="@dimen/small_txt"
                      android:layout_marginTop="3dp"
                      android:layout_marginLeft="20dp"
                      android:layout_marginBottom="5dp"
            />

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_toRightOf="@+id/circular_iv"
                      android:layout_below="@+id/address_tv"
                      android:text="Air Conditioners"
                      android:id="@+id/category_tv"
                      android:fontFamily="serif"
                      android:textSize="@dimen/small_txt"
                      android:layout_marginBottom="5dp"
                      android:layout_marginLeft="20dp"
            />

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_toRightOf="@+id/circular_iv"
                      android:layout_below="@+id/category_tv"
                      android:text="Suzuki"
                      android:id="@+id/brand_tv"
                      android:fontFamily="serif"
                      android:textSize="@dimen/small_txt"
                      android:layout_marginLeft="20dp"
                      android:layout_marginBottom="5dp"
            />


            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_toRightOf="@+id/circular_iv"
                      android:layout_below="@+id/brand_tv"
                      android:text="No Collong"
                      android:id="@+id/problem_tv"
                      android:fontFamily="serif"
                      android:textSize="@dimen/small_txt"
                      android:layout_marginLeft="20dp"
                      android:layout_marginBottom="5dp"
            />

            <LinearLayout
                    android:id="@+id/separate_ll"
                    android:layout_width="match_parent"
                    android:layout_below="@+id/problem_tv"
                    android:background="@color/bg_separator"
                    android:orientation="horizontal"
                    android:layout_height="1dp">

            </LinearLayout>

            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:padding="2dp"
                          android:id="@+id/order_ll"
                          android:layout_below="@+id/separate_ll">

                <TextView android:layout_width="100dp"
                          android:layout_height="wrap_content"
                          android:layout_weight=".5"
                          android:text="30/12/2018  4 PM"
                          android:textAlignment="center"
                          android:id="@+id/date_tv"
                          android:fontFamily="serif"
                          android:textSize="@dimen/small_txt"
                          android:layout_marginTop="3dp"
                          android:layout_marginBottom="10dp"/>

                <View android:layout_width="1dp"
                      android:background="@color/bg_separator"
                      android:layout_height="match_parent"/>

                <TextView android:layout_width="100dp"
                          android:layout_height="wrap_content"
                          android:layout_weight=".5"
                          android:text="CRNB0005131"
                          android:textAlignment="center"
                          android:id="@+id/orderid_tv"
                          android:fontFamily="serif"
                          android:textSize="@dimen/small_txt"
                          android:padding="5dp"
                          android:layout_marginTop="3dp"
                          android:layout_marginBottom="10dp"/>

            </LinearLayout>

            <LinearLayout
                    android:id="@+id/separate1_ll"
                    android:layout_width="match_parent"
                    android:layout_below="@+id/order_ll"
                    android:background="@color/bg_separator"
                    android:orientation="horizontal"
                    android:layout_height="1dp">

            </LinearLayout>

            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:padding="2dp"
                          android:id="@+id/order_ll1"
                          android:layout_below="@+id/separate1_ll">


                <TextView android:layout_width="100dp"
                          android:layout_height="wrap_content"
                          android:text="Job done : "
                          android:textColor="@color/colorPrimary"
                          android:textAlignment="center"
                          android:fontFamily="serif"
                          android:textSize="14dp"
                          android:padding="5dp"
                          android:layout_marginTop="3dp"
                          android:layout_marginBottom="10dp"/>

                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text=""
                          android:textAlignment="center"
                          android:id="@+id/verify_tv"
                          android:fontFamily="serif"
                          android:textSize="14dp"
                          android:padding="5dp"
                          android:layout_marginTop="3dp"
                          android:layout_marginBottom="10dp"/>


            </LinearLayout>

            <LinearLayout
                    android:id="@+id/invoice_ll"
                    android:layout_width="match_parent"
                    android:layout_below="@+id/order_ll1"
                    android:background="@color/bg_separator"
                    android:orientation="horizontal"
                    android:layout_height="1dp">

            </LinearLayout>

            <RelativeLayout android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:padding="2dp"
                            android:id="@+id/complete_rl"
                            android:layout_below="@+id/invoice_ll">

                <TextView android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:textAlignment="center"
                          android:id="@+id/labour_tv"
                          android:fontFamily="serif"
                          android:textColor="@color/colorPrimaryDark"
                          android:textSize="14dp"
                          android:padding="5dp"
                          android:text="Close the Call"
                          android:layout_marginLeft="15dp"/>


            </RelativeLayout>


        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>
