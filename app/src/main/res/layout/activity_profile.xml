<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent">
    <ScrollView android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical">

    <RelativeLayout
            android:layout_gravity="left"
            android:background="#ffffffff"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5.0dip">
        <TextView android:textSize="@dimen/text_size_medium"
                  android:textColor="@color/black"
                  android:id="@+id/gethelp_tv"
                  android:visibility="gone"
                  android:background="@drawable/cell_border_edittext"
                  android:padding="10.0dip"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_margin="10.0dip"
                  android:text="Get Help "
                  android:layout_alignParentRight="true"/>
        <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profileimage_iv"
                android:layout_width="90.0dip"
                android:layout_height="90.0dip"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10.0dip"
                android:src="@drawable/img"
                app:civ_border_color="@color/white"
                app:civ_border_width="1.0dip"/>
        />
        <TextView android:textSize="@dimen/text_size_medium"
                  android:textColor="@color/black"
                  android:id="@+id/name_tv"
                  android:background="#ffffffff"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="20.0dip"
                  android:layout_marginTop="20.0dip"
                  android:text=""
                  android:layout_toRightOf="@+id/profileimage_iv"/>

        <ImageView android:id="@+id/verify_iv"
                   android:layout_width="20.0dip"
                   android:layout_height="20.0dip"
                   android:layout_marginLeft="10.0dip"
                   android:layout_marginTop="5dp"
                   android:visibility="gone"
                   android:layout_below="@+id/name_tv"
                   android:layout_toRightOf="@+id/profileimage_iv"
                   android:src="@drawable/green_tick_icon"/>


        <TextView android:textSize="@dimen/text_size_medium"
                  android:textColor="@color/black"
                  android:background="#ffffffff"
                  android:id="@+id/fewsteps_tv"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="10.0dip"
                  android:layout_marginTop="5dp"
                  android:layout_below="@+id/name_tv"
                  android:layout_toRightOf="@+id/verify_iv"
                  android:text="You are few steps away."/>

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_margin="10dp"
                      android:visibility="gone"
                      android:orientation="vertical"
                      android:id="@+id/verifcation_status_ll"
                      android:background="@drawable/verifcation_drwa"
                      android:layout_marginTop="20dp"
                      android:layout_below="@+id/profileimage_iv">
            <TextView android:textSize="@dimen/text_size_medium"
                      android:textColor="@color/black"
                      android:layout_marginTop="10dp"
                      android:textStyle="bold"
                      android:maxLines="5"
                      android:textAlignment="center"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="20.0dip"
                      android:text="Your profile is submitted for the quality verification"/>

            <TextView android:textSize="@dimen/small_txt"
                      android:textColor="@color/black"
                      android:maxLines="5"
                      android:textAlignment="center"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:padding="10dp"
                      android:text="Our team will go through your profile and get back to you in the case of any queries.Thank you for your patience."/>


        </LinearLayout>
    </RelativeLayout>
    <androidx.cardview.widget.CardView
            android:visibility="visible"
            android:clickable="true"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5.0dip"
            app:cardCornerRadius="4.0dip"
            app:cardElevation="2.0dip"
            app:cardUseCompatPadding="true">

        <LinearLayout
                android:orientation="vertical"
                android:visibility="visible"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
            <RelativeLayout android:gravity="center_vertical"
                            android:layout_gravity="left"
                            android:orientation="horizontal"
                            android:id="@+id/myrating_rl"
                            android:background="#ffffffff"
                            android:layout_width="fill_parent"
                            android:layout_height="50.0dip">
                <TextView android:textSize="@dimen/text_size_medium"
                          android:textColor="@color/black"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_marginLeft="50.0dip"
                          android:layout_marginTop="10.0dip"
                          android:layout_marginBottom="10.0dip"
                          android:text="My Rating "/>
                <ImageView android:id="@+id/myrating_iv"
                           android:layout_width="20.0dip"
                           android:layout_height="20.0dip"
                           android:layout_margin="10.0dip"
                           android:src="@drawable/grey_tick_img"
                           android:layout_alignParentLeft="true"/>
            </RelativeLayout>
            <View android:background="#ffe0e0e0"
                  android:layout_width="fill_parent"
                  android:layout_height="1.0dip"/>
            <RelativeLayout android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:id="@+id/idenetity_rl"
                            android:background="#ffffffff"
                            android:layout_width="fill_parent"
                            android:layout_height="50.0dip">
                <TextView android:textSize="@dimen/text_size_medium"
                          android:textColor="@color/black"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_marginLeft="50.0dip"
                          android:layout_marginTop="10.0dip"
                          android:layout_marginBottom="10.0dip"
                          android:text="Identity Verification *"/>
                <ImageView android:id="@+id/identity_iv"
                           android:layout_width="20.0dip"
                           android:layout_height="20.0dip"
                           android:layout_margin="10.0dip"
                           android:src="@drawable/grey_tick_img"
                           android:layout_alignParentLeft="true"/>
            </RelativeLayout>
            <View android:background="#ffe0e0e0"
                  android:layout_width="fill_parent"
                  android:layout_height="1.0dip"/>
            <RelativeLayout android:gravity="center_vertical"
                            android:layout_gravity="left"
                            android:orientation="horizontal"
                            android:id="@+id/bank_rl"
                            android:background="#ffffffff"
                            android:layout_width="fill_parent"
                            android:layout_height="50.0dip">
                <TextView android:textSize="@dimen/text_size_medium"
                          android:textColor="@color/black"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_marginLeft="50.0dip"
                          android:layout_marginTop="10.0dip"
                          android:layout_marginBottom="10.0dip"
                          android:text="Bank Account Details *"/>
                <ImageView android:id="@+id/bank_iv"
                           android:layout_width="20.0dip"
                           android:layout_height="20.0dip"
                           android:layout_margin="10.0dip"
                           android:src="@drawable/grey_tick_img"
                           android:layout_alignParentLeft="true"/>
            </RelativeLayout>

            <View android:background="#ffe0e0e0"
                  android:layout_width="fill_parent"
                  android:layout_height="1.0dip"/>
            <RelativeLayout android:gravity="center_vertical"
                            android:layout_gravity="left"
                            android:orientation="horizontal"
                            android:id="@+id/award_rl"
                            android:background="#ffffffff"
                            android:layout_width="fill_parent"
                            android:layout_height="50.0dip">
                <TextView android:textSize="@dimen/text_size_medium"
                          android:textColor="@color/black"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_marginLeft="50.0dip"
                          android:layout_marginTop="10.0dip"
                          android:layout_marginBottom="10.0dip"
                          android:text="Upload/ Link Youtube video"/>
                <ImageView android:id="@+id/award_iv"
                           android:layout_width="20.0dip"
                           android:layout_height="20.0dip"
                           android:layout_margin="10.0dip"
                           android:src="@drawable/grey_tick_img"
                           android:layout_alignParentLeft="true"/>
            </RelativeLayout>


            <View android:background="#ffe0e0e0"
                  android:layout_width="fill_parent"
                  android:layout_height="1.0dip"/>
            <RelativeLayout android:gravity="center_vertical"
                            android:layout_gravity="left"
                            android:orientation="horizontal"
                            android:id="@+id/signout_rl"
                            android:background="#ffffffff"
                            android:layout_width="fill_parent"
                            android:layout_height="50.0dip">
                <TextView android:textSize="@dimen/text_size_medium"
                          android:textColor="@color/black"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_marginLeft="50.0dip"
                          android:layout_marginTop="10.0dip"
                          android:layout_marginBottom="10.0dip"
                          android:text="Sign Out"/>
            </RelativeLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <LinearLayout android:orientation="horizontal"
                  android:layout_width="fill_parent"
                  android:layout_height="fill_parent"
                  android:layout_marginTop="10.0dip"
                  android:layout_marginBottom="10.0dip">

            <androidx.cardview.widget.CardView
                    android:layout_gravity="center"
                    android:id="@+id/move_next_bt"
                    android:clickable="true"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10.0dip"
                    android:layout_marginRight="10.0dip"
                    android:layout_below="@+id/attendence_rv"
                    app:cardBackgroundColor="@color/colorPrimary"
                    app:cardCornerRadius="4.0dip">
                <TextView android:textSize="20.0dip"
                          android:textColor="@color/white"
                          android:gravity="center"
                          android:layout_gravity="center_horizontal"
                          android:layout_width="wrap_content"
                          android:layout_height="40.0dip"
                          android:layout_margin="3.0dip"
                          android:text="Submit for approval"
                          android:textAllCaps="false"/>
            </androidx.cardview.widget.CardView>
    </LinearLayout>
    </LinearLayout>
    </ScrollView>
</LinearLayout>
