<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/main_rl"
              android:layout_marginBottom="1dp"
              android:orientation="horizontal">

    <androidx.cardview.widget.CardView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="1dp"
            app:cardElevation="4dp">

        <RelativeLayout
                android:id="@+id/transaction_rl"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <RelativeLayout android:layout_width="match_parent"
                          android:id="@+id/date_ll"
                          android:background="#F2F2F2"
                          android:layout_height="30dp">
                <TextView android:layout_width="wrap_content"
                          android:layout_height="match_parent"
                          android:textColor="@color/dark_grey"
                          android:textStyle="bold"
                          android:gravity="center_vertical"
                          android:layout_marginLeft="20dp"
                          android:id="@+id/transaction_date_tv"
                          android:text=""/>

            </RelativeLayout>
            <ImageView
                    android:id="@+id/circular_iv"
                    android:layout_width="60dp"
                    android:padding="2dp"
                    android:layout_height="60dp"
                    android:layout_margin="10dp"
                    android:layout_below="@+id/date_ll"
                    android:src="@drawable/ss_wallet"/>

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_toRightOf="@+id/circular_iv"
                      android:layout_below="@+id/date_ll"
                      android:text=""
                      android:textStyle="bold"
                      android:fontFamily="serif"
                      android:maxLines="2"
                      android:layout_marginRight="15dp"
                      android:textColor="@color/black"
                      android:id="@+id/cutomer_name"
                      android:textSize="@dimen/small_txt"
                      android:layout_marginTop="20dp"
                      android:layout_marginLeft="20dp"/>

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_alignParentRight="true"
                      android:layout_below="@+id/cutomer_name"
                      android:text=""
                      android:textStyle="bold"
                      android:id="@+id/transaction_amount_tv"
                      android:fontFamily="serif"
                      android:textColor="@color/colorPrimaryDark"
                      android:textSize="@dimen/text_size_18"
                      android:layout_marginTop="3dp"
                      android:layout_marginRight="10dp"
                      android:layout_marginBottom="5dp"
            />


            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_toRightOf="@+id/circular_iv"
                      android:layout_below="@+id/cutomer_name"
                      android:text=""
                      android:textStyle="bold"
                      android:id="@+id/transaction_from_tv"
                      android:fontFamily="serif"
                      android:textColor="@color/black"
                      android:textSize="@dimen/small_txt"
                      android:layout_marginTop="3dp"
                      android:layout_marginLeft="20dp"
                      android:layout_marginBottom="5dp"
            />

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_toRightOf="@+id/circular_iv"
                      android:layout_below="@+id/transaction_from_tv"
                      android:text="sdfd"
                      android:id="@+id/transaction_time_tv"
                      android:fontFamily="serif"
                      android:textSize="@dimen/small_txt"
                      android:layout_marginTop="5dp"
                      android:layout_marginLeft="20dp"
                      android:layout_marginBottom="5dp"
            />

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_toRightOf="@+id/transaction_time_tv"
                      android:layout_below="@+id/transaction_from_tv"
                      android:text="xcvv"
                      android:id="@+id/closing_amount_tv"
                      android:fontFamily="serif"
                      android:textSize="@dimen/small_txt"
                      android:layout_marginTop="5dp"
                      android:layout_marginLeft="20dp"
                      android:layout_marginBottom="5dp"
            />

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_toRightOf="@+id/circular_iv"
                      android:layout_below="@+id/transaction_time_tv"
                      android:text="Txn  Id :"
                      android:id="@+id/transaction_tv"
                      android:fontFamily="serif"
                      android:textSize="@dimen/small_txt"
                      android:layout_marginTop="5dp"
                      android:layout_marginLeft="20dp"
                      android:layout_marginBottom="10dp"
            />

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_toRightOf="@+id/transaction_tv"
                      android:layout_below="@+id/transaction_time_tv"
                      android:text=""
                      android:id="@+id/transaction_id_tv"
                      android:fontFamily="serif"
                      android:textSize="@dimen/small_txt"
                      android:layout_marginTop="5dp"
                      android:layout_marginLeft="20dp"
                      android:layout_marginBottom="10dp"
            />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>
