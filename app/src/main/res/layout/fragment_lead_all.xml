<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_rl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="1dp"
        app:cardElevation="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/margin_10dp"
                android:layout_below="@+id/itemDescription">

                <TextView
                    android:id="@+id/edit_tv"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="serif"
                    android:padding="@dimen/dp5"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:textAlignment="center"
                    android:text="Edit"
                    android:layout_weight=".5"
                    android:background="@drawable/rounded_corner_button"
                    android:textSize="@dimen/small_txt"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:visibility="visible" />


                <TextView
                    android:id="@+id/delete_tv"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="30dp"
                    android:fontFamily="serif"
                    android:padding="@dimen/dp5"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:textAlignment="center"
                    android:text="Delete"
                    android:layout_weight=".5"
                    android:background="@drawable/rounded_corner_button"
                    android:textSize="@dimen/small_txt"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:visibility="visible" />




            </LinearLayout>

            <LinearLayout
                android:id="@+id/separate_ll"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/ll"
                android:background="@color/bg_separator"
                android:orientation="horizontal">

            </LinearLayout>


            <TextView
                android:id="@+id/itemName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/newlead"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@+id/circular_iv"
                android:fontFamily="serif"
                android:text="Chichen Curry"
                android:textColor="@color/black"
                android:textSize="@dimen/small_txt"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/food_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/itemName"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="5dp"
                android:layout_toRightOf="@+id/circular_iv"
                android:fontFamily="serif"
                android:text="Veg"
                android:textColor="@color/dark_grey"
                android:textSize="@dimen/small_txt" />


            <TextView
                android:id="@+id/itemGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/food_type"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="5dp"
                android:layout_toRightOf="@+id/circular_iv"
                android:fontFamily="serif"
                android:text="Chicken Group"
                android:textSize="@dimen/small_txt" />

            <TextView
                android:id="@+id/itemDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/itemGroup"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="5dp"
                android:layout_toRightOf="@+id/circular_iv"
                android:fontFamily="serif"
                android:text="Description"
                android:textSize="@dimen/small_txt" />


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/circular_iv"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:src="@drawable/mom1" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>
