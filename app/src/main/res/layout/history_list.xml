<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_rl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:background="#ffffff"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        app:cardUseCompatPadding="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="1dp"
        app:cardElevation="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/separate_ll"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/layout2"
                android:background="@color/bg_separator"
                android:orientation="horizontal">

            </LinearLayout>

            <LinearLayout
                android:id="@+id/order_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout2"
                android:padding="2dp">

                <TextView
                    android:id="@+id/date"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight=".5"
                    android:fontFamily="serif"
                    android:text="18/08/2019  4 PM"
                    android:textAlignment="center"
                    android:textSize="@dimen/small_txt" />

                <TextView
                    android:id="@+id/orderId"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight=".5"
                    android:fontFamily="serif"
                    android:padding="5dp"
                    android:text="CRNB0005131"
                    android:textAlignment="center"
                    android:textSize="@dimen/small_txt" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/bg_separator" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/separate1_ll"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/order_ll"
                android:background="@color/bg_separator"
                android:orientation="horizontal">

            </LinearLayout>

            <LinearLayout
                android:id="@+id/order_ll1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/separate1_ll"
                android:padding="2dp">


                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="serif"
                    android:padding="5dp"
                    android:text="Order Status : "
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="serif"
                    android:padding="5dp"
                    android:text="Delivered"
                    android:textAlignment="center"
                    android:textSize="14dp" />


            </LinearLayout>



            <LinearLayout
                android:id="@+id/a"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@+id/order_ll1"
                android:padding="2dp">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/bg_separator"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">




                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="serif"
                        android:padding="5dp"
                        android:text="Rating : "
                        android:textAlignment="center"
                        android:textColor="@color/colorPrimary"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/rating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="serif"
                        android:padding="5dp"
                        android:text="Delivered"
                        android:textAlignment="center"
                        android:textSize="14dp" />



                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/invoice_ll"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/a"
                android:background="@color/bg_separator"
                android:orientation="horizontal">

            </LinearLayout>


            <LinearLayout
                android:id="@+id/invoice_ll2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/invoice_ll1"
                android:background="@color/bg_separator"
                android:orientation="horizontal">

            </LinearLayout>



            <RelativeLayout
                android:id="@+id/invoice_ll1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/invoice_ll"
                android:padding="2dp">


                <TextView
                    android:id="@+id/parts_ll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:fontFamily="serif"
                    android:padding="5dp"
                    android:text="Total Number Of Item     : "
                    android:textAlignment="center"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/totalItem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="3dp"
                    android:layout_toRightOf="@+id/parts_ll"
                    android:fontFamily="serif"
                    android:padding="5dp"
                    android:text="3"
                    android:textAlignment="center"
                    android:textSize="14dp" />

                <TextView
                    android:visibility="gone"
                    android:id="@+id/parts_ll1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/parts_ll"
                    android:fontFamily="serif"
                    android:padding="5dp"
                    android:text="Total Item Cost ( Including GST ) : "
                    android:textAlignment="center"
                    android:textSize="14dp" />

                <TextView
                    android:visibility="gone"
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/parts_ll"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@+id/parts_ll1"
                    android:fontFamily="serif"
                    android:padding="5dp"
                    android:text="₹550"
                    android:textAlignment="center"
                    android:textSize="14dp" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/invoice_rl1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/invoice_ll2"
                android:padding="2dp">


                <TextView
                    android:id="@+id/parts_ll3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:fontFamily="serif"
                    android:padding="5dp"
                    android:text="Customer mobile no "
                    android:textAlignment="center"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/customerMobile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="3dp"
                    android:layout_marginRight="40dp"
                    android:fontFamily="serif"
                    android:padding="5dp"
                    android:text="9832323232"
                    android:textAlignment="center"
                    android:textSize="14dp" />

            </RelativeLayout>

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/newlead"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@+id/circular_iv"
                android:fontFamily="serif"
                android:text="Shadab Azam Farooqui"
                android:textColor="@color/black"
                android:textSize="@dimen/small_txt"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="10dp"
                android:layout_toRightOf="@+id/circular_iv"
                android:fontFamily="serif"
                android:text="117/3A Noida sector 16 201301"
                android:textColor="@color/dark_grey"
                android:textSize="@dimen/small_txt" />

            <LinearLayout
                android:id="@+id/layout"
                android:layout_width="match_parent"
                android:layout_below="@+id/address"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:visibility="gone"
                android:layout_toRightOf="@+id/circular_iv"
                android:layout_marginBottom="5dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_weight="2"
                    android:id="@+id/category_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/address"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="serif"
                    android:text="Chicken Biryani"
                    android:textSize="@dimen/small_txt" />

                <TextView
                    android:layout_weight="1"
                    android:id="@+id/brand_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/layout"

                    android:layout_marginBottom="5dp"
                    android:layout_toRightOf="@+id/circular_iv"
                    android:fontFamily="serif"
                    android:text="Full"
                    android:textSize="@dimen/small_txt" />


                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/layout"
                    android:layout_marginBottom="5dp"
                    android:layout_toRightOf="@+id/circular_iv"
                    android:fontFamily="serif"
                    android:text="2"
                    android:textSize="@dimen/small_txt" />


                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/layout"
                    android:layout_marginBottom="5dp"
                    android:layout_toRightOf="@+id/circular_iv"
                    android:fontFamily="serif"
                    android:text="₹200"
                    android:textSize="@dimen/small_txt" />
            </LinearLayout>



            <LinearLayout
                android:id="@+id/layout2"
                android:layout_width="match_parent"
                android:layout_below="@+id/layout"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/circular_iv"
                android:layout_marginBottom="5dp"
                android:visibility="gone"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/address"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="serif"
                    android:text="Mutton Biryani"
                    android:textSize="@dimen/small_txt" />




                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_toRightOf="@+id/circular_iv"
                    android:fontFamily="serif"
                    android:text="1"
                    android:textSize="@dimen/small_txt" />


                <TextView
                    android:id="@+id/problem_tv"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_toRightOf="@+id/circular_iv"
                    android:fontFamily="serif"
                    android:text="₹350"
                    android:textSize="@dimen/small_txt" />
            </LinearLayout>







            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/circular_iv"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:src="@drawable/mom1" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>
